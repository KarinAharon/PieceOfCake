<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    tools:context=".Register">

    <Button
        android:id="@+id/confirm"
        android:layout_width="157dp"
        android:layout_height="39dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="84dp"
        android:background="#FAF7F7"
        android:onClick="register"
        android:text="@string/Confirm"
        android:textColor="#0A0A0A"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputPhone"
        android:layout_width="258dp"
        android:layout_height="38dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="224dp"
        android:autofillHints=""
        android:background="#FCF9F9"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/Phone"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginBottom="224dp"
        android:text="@string/phoneNumber"
        android:textColor="#0A0A0A"
        android:textSize="24sp"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputFullName"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="296dp"
        android:autofillHints=""
        android:background="#FCF9F9"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginBottom="296dp"
        android:text="@string/fullName"
        android:textColor="#0A0A0A"
        android:textSize="24sp"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/PasswordInput"
        android:layout_width="262dp"
        android:layout_height="38dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="352dp"
        android:autofillHints=""
        android:background="#FCF9F9"
        android:ems="10"
        android:inputType="textWebPassword"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="129dp"
        android:layout_height="53dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="136dp"
        android:text="@string/Reg"
        android:textColor="#111111"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/EmailInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/PieceOfCake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/pieceofcake"
        android:textColor="#161616"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:fontFamily="aclonica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/EmailInput"
        android:layout_width="261dp"
        android:layout_height="44dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="416dp"
        android:autofillHints=""
        android:background="#FCF9F9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="416dp"
        android:text="@string/Email"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:fontFamily="aclonica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginBottom="352dp"
        android:text="@string/Password"
        android:textColor="#0A0A0A"
        android:textSize="24sp"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/ifBaker"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="144dp"
        android:buttonTint="#110000"
        android:text="@string/ifBaker"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/ifCustomer"
        android:layout_width="109dp"
        android:layout_height="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="140dp"
        android:buttonTint="#0C0000"
        android:text="@string/ifCustomer"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>